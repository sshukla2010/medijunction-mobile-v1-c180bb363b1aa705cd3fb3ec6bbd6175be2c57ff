<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adpOdtvSectionHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/lightbackcolor">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/adpOdimg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_ourdoctor" />

                    <Button
                        android:id="@+id/adpOdbtnviewProfile"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/rounded_button_primary"
                        android:text="view"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/white" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adp_od_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/degree_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Degree : "
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/adp_od_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/degree_heading"
                            android:layout_toRightOf="@id/degree_heading"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/speciality_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speciality : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/adp_od_speciality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/speciality_heading"
                            android:layout_toRightOf="@id/speciality_heading"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/lin_statuslayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/status_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Language : "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/adp_od_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/status_heading"
                            android:layout_toRightOf="@id/status_heading"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"/>
                    </RelativeLayout>




                    <RelativeLayout
                        android:id="@+id/rl_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qty_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Qty : "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@id/qty_heading"
                            android:layout_toEndOf="@id/qty_heading"
                            android:gravity="center">

                            <Button
                                android:id="@+id/adpOdcpminus"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="@dimen/_7sdp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/ic_minus_cp" />

                            <TextView
                                android:id="@+id/adpOdtvqty"
                                android:minWidth="32dp"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:padding="@dimen/_1sdp"
                                android:textSize="@dimen/_12ssp"
                                android:text="0"
                                android:background="@drawable/square_back"
                                android:textAlignment="center"
                                android:gravity="center"
                                app:layout_constraintDimensionRatio="1:1" />

                            <Button
                                android:id="@+id/adpOdcpplus"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:gravity="center"
                                android:background="@drawable/ic_add_cp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/rate_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Rs"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/adp_od_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:text=""
                                android:textStyle="bold"
                                android:layout_toEndOf="@id/rate_heading"
                                android:layout_toRightOf="@id/rate_heading"
                                />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/adp_od_checkbox"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>