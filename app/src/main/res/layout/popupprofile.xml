<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

    
        <ImageView
            android:id="@+id/pop_od_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_ourdoctor"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="center"/>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/name_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_od_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/name_heading"
            android:layout_toEndOf="@id/name_heading"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/degree_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pop_od_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/degree_heading"
                android:layout_toEndOf="@id/degree_heading"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/speciality_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speciality : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pop_od_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/speciality_heading"
                android:layout_toEndOf="@id/speciality_heading"/>
        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/lin_statuslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pop_od_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/status_heading"
                android:layout_toEndOf="@id/status_heading"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rate_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pop_od_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/rate_heading"
                android:layout_toEndOf="@id/rate_heading"/>
        </RelativeLayout>


    <Button
        android:id="@+id/btn_od_close"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rounded_button_primary"
        android:text="close"/>
    
</LinearLayout>
</androidx.cardview.widget.CardView>