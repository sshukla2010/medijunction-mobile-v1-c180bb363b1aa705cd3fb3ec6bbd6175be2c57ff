<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightbackcolor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/shape_imagecircle"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>
                    <ImageView
                        android:id="@+id/ivContactImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_user"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCallerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />


                    <RelativeLayout
                        android:id="@+id/rlDatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCallDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:gravity="bottom"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text=""
                            android:textSize="@dimen/_10ssp"
                            app:drawableStartCompat="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/tvCallTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tvCallDate"
                            android:layout_margin="@dimen/_2sdp"
                            android:gravity="bottom"
                            app:drawableStartCompat="@drawable/ic_time"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Name"
                        app:drawableStartCompat="@drawable/ic_more_patient"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary">
    </LinearLayout>

</LinearLayout>